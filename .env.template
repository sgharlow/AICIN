# AICIN Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================================================
# Database Configuration (AWS RDS PostgreSQL)
# ============================================================================
DATABASE_HOST=your-rds-endpoint.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=learningai365
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-password-here
DATABASE_SSL=true
DATABASE_MAX_CONNECTIONS=5

# ============================================================================
# Redis Cache (Google Memorystore or local Redis)
# ============================================================================
REDIS_HOST=10.0.0.3
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_PASSWORD=your-redis-password-if-needed

# ============================================================================
# JWT Authentication (same secret as LearningAI365)
# ============================================================================
JWT_SECRET=your-jwt-secret-from-learningai365

# ============================================================================
# Agent URLs (Cloud Run service URLs)
# ============================================================================
# Leave blank for local development with fallback scoring
PROFILE_ANALYZER_URL=https://profile-analyzer-abc123.run.app
CONTENT_MATCHER_URL=https://content-matcher-abc123.run.app
PATH_OPTIMIZER_URL=https://path-optimizer-abc123.run.app
COURSE_VALIDATOR_URL=https://course-validator-abc123.run.app
RECOMMENDATION_BUILDER_URL=https://recommendation-builder-abc123.run.app

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_TIMEOUT=30000
AGENT_RETRIES=2

# ============================================================================
# Google Cloud Configuration
# ============================================================================
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================================================
# Server Configuration
# ============================================================================
PORT=8080
NODE_ENV=production
LOG_LEVEL=info
