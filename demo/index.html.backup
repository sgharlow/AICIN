<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AICIN - AI Course Intelligence Network Demo</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 800px;
            width: 100%;
            padding: 40px;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

        .logo {
            font-size: 48px;
            margin-bottom: 10px;
        }

        h1 {
            color: #667eea;
            font-size: 32px;
            margin-bottom: 10px;
        }

        .subtitle {
            color: #666;
            font-size: 16px;
        }

        .progress-bar {
            background: #f0f0f0;
            height: 8px;
            border-radius: 4px;
            margin-bottom: 30px;
            overflow: hidden;
        }

        .progress-fill {
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            height: 100%;
            width: 0%;
            transition: width 0.3s ease;
        }

        .question {
            display: none;
            animation: fadeIn 0.5s ease;
        }

        .question.active {
            display: block;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .question-label {
            font-size: 20px;
            font-weight: 600;
            color: #333;
            margin-bottom: 20px;
            display: block;
        }

        .options {
            display: grid;
            gap: 12px;
        }

        .option {
            background: #f8f9fa;
            border: 2px solid transparent;
            border-radius: 12px;
            padding: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

        .option:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }

        .option.selected {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }

        .option input[type="radio"],
        .option input[type="checkbox"] {
            margin-right: 12px;
            cursor: pointer;
        }

        .checkbox-container {
            display: grid;
            gap: 8px;
        }

        .nav-buttons {
            display: flex;
            gap: 12px;
            margin-top: 30px;
        }

        .btn {
            flex: 1;
            padding: 14px 24px;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        }

        .btn-secondary {
            background: #e9ecef;
            color: #333;
        }

        .btn-secondary:hover {
            background: #dee2e6;
        }

        .btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .results {
            display: none;
        }

        .results.active {
            display: block;
            animation: fadeIn 0.5s ease;
        }

        .loading {
            text-align: center;
            padding: 40px;
        }

        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .recommendation-card {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 16px;
            border-left: 4px solid #667eea;
        }

        .recommendation-card.rank-1 {
            border-left-color: #ffc107;
            background: linear-gradient(135deg, #fff9e6 0%, #fff3cd 100%);
        }

        .recommendation-card.rank-2 {
            border-left-color: #c0c0c0;
        }

        .recommendation-card.rank-3 {
            border-left-color: #cd7f32;
        }

        .rec-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 12px;
        }

        .rec-rank {
            font-size: 24px;
            font-weight: 700;
            color: #667eea;
            margin-right: 12px;
        }

        .rec-rank.gold { color: #ffc107; }
        .rec-rank.silver { color: #c0c0c0; }
        .rec-rank.bronze { color: #cd7f32; }

        .rec-title {
            font-size: 18px;
            font-weight: 600;
            color: #333;
            flex: 1;
        }

        .rec-score {
            background: #667eea;
            color: white;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
        }

        .rec-details {
            color: #666;
            font-size: 14px;
            margin-top: 8px;
        }

        .rec-reason {
            background: white;
            padding: 12px;
            border-radius: 8px;
            margin-top: 12px;
            font-size: 14px;
            color: #555;
        }

        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 16px;
            margin-top: 30px;
            padding-top: 30px;
            border-top: 2px solid #e9ecef;
        }

        .stat {
            text-align: center;
        }

        .stat-value {
            font-size: 28px;
            font-weight: 700;
            color: #667eea;
        }

        .stat-label {
            font-size: 12px;
            color: #666;
            text-transform: uppercase;
            margin-top: 4px;
        }

        .error {
            background: #fee;
            border: 2px solid #fcc;
            border-radius: 12px;
            padding: 20px;
            color: #c33;
            text-align: center;
        }

        .badge {
            display: inline-block;
            background: #667eea;
            color: white;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            margin-left: 8px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo">ðŸ¤–</div>
            <h1>AICIN Quiz Demo</h1>
            <p class="subtitle">Answer 9 questions to get personalized AI learning path recommendations<span class="badge">40% Shorter</span></p>
        </div>

        <div class="progress-bar">
            <div class="progress-fill" id="progressFill"></div>
        </div>

        <!-- Quiz Questions -->
        <form id="quizForm">
            <!-- Question 1: Experience Level (CRITICAL) -->
            <div class="question active" data-question="1">
                <label class="question-label">1. What's your current AI/ML experience level?</label>
                <div class="options">
                    <label class="option">
                        <input type="radio" name="experienceLevel" value="beginner" required>
                        <span>Beginner - New to AI/ML</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="experienceLevel" value="intermediate" required>
                        <span>Intermediate - Some AI/ML experience</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="experienceLevel" value="advanced" required>
                        <span>Advanced - Extensive AI/ML experience</span>
                    </label>
                </div>
            </div>

            <!-- Question 2: Interests (CRITICAL) -->
            <div class="question" data-question="2">
                <label class="question-label">2. Which AI topics interest you most? (Select all that apply)</label>
                <div class="checkbox-container">
                    <label class="option">
                        <input type="checkbox" name="interests" value="machine-learning">
                        <span>Machine Learning</span>
                    </label>
                    <label class="option">
                        <input type="checkbox" name="interests" value="deep-learning">
                        <span>Deep Learning</span>
                    </label>
                    <label class="option">
                        <input type="checkbox" name="interests" value="nlp">
                        <span>Natural Language Processing (NLP)</span>
                    </label>
                    <label class="option">
                        <input type="checkbox" name="interests" value="computer-vision">
                        <span>Computer Vision</span>
                    </label>
                    <label class="option">
                        <input type="checkbox" name="interests" value="data-science">
                        <span>Data Science</span>
                    </label>
                    <label class="option">
                        <input type="checkbox" name="interests" value="python">
                        <span>Python Programming</span>
                    </label>
                </div>
            </div>

            <!-- Question 3: Weekly Hours (HIGH) -->
            <div class="question" data-question="3">
                <label class="question-label">3. How many hours per week can you dedicate to learning?</label>
                <div class="options">
                    <label class="option">
                        <input type="radio" name="availability" value="5-10h" required>
                        <span>5-10 hours per week</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="availability" value="10-20h" required>
                        <span>10-20 hours per week</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="availability" value="20+h" required>
                        <span>20+ hours per week</span>
                    </label>
                </div>
            </div>

            <!-- Question 4: Budget (HIGH) -->
            <div class="question" data-question="4">
                <label class="question-label">4. What's your budget for learning courses?</label>
                <div class="options">
                    <label class="option">
                        <input type="radio" name="budget" value="$0" required>
                        <span>Free courses only</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="budget" value="$0-100" required>
                        <span>$0 - $100</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="budget" value="$100-500" required>
                        <span>$100 - $500</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="budget" value="$500+" required>
                        <span>$500+</span>
                    </label>
                </div>
            </div>

            <!-- Question 5: Timeline (HIGH) -->
            <div class="question" data-question="5">
                <label class="question-label">5. What's your target timeline for completing a learning path?</label>
                <div class="options">
                    <label class="option">
                        <input type="radio" name="timeline" value="1-3-months" required>
                        <span>1-3 months</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="timeline" value="3-6-months" required>
                        <span>3-6 months</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="timeline" value="6-12-months" required>
                        <span>6-12 months</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="timeline" value="12+-months" required>
                        <span>12+ months</span>
                    </label>
                </div>
            </div>

            <!-- Question 6: Certification (MEDIUM) -->
            <div class="question" data-question="6">
                <label class="question-label">6. How important is certification to you?</label>
                <div class="options">
                    <label class="option">
                        <input type="radio" name="certification" value="required" required>
                        <span>Required - I need certification</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="certification" value="nice-to-have" required>
                        <span>Nice to have</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="certification" value="not-needed" required>
                        <span>Not needed</span>
                    </label>
                </div>
            </div>

            <!-- Question 7: Learning Goal (LOW - for explainability) -->
            <div class="question" data-question="7">
                <label class="question-label">7. What's your primary learning goal?</label>
                <div class="options">
                    <label class="option">
                        <input type="radio" name="learningGoal" value="career-switch" required>
                        <span>Career switch to AI</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="learningGoal" value="upskill" required>
                        <span>Upskill in current role</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="learningGoal" value="specialize" required>
                        <span>Specialize in AI domain</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="learningGoal" value="explore" required>
                        <span>Explore AI fundamentals</span>
                    </label>
                </div>
            </div>

            <!-- Question 8: Learning Style -->
            <div class="question" data-question="8">
                <label class="question-label">8. What's your preferred learning style?</label>
                <div class="options">
                    <label class="option">
                        <input type="radio" name="learningStyle" value="hands-on" required>
                        <span>Hands-on projects</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="learningStyle" value="theory-first" required>
                        <span>Theory first, then practice</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="learningStyle" value="video-based" required>
                        <span>Video lectures</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="learningStyle" value="project-based" required>
                        <span>Project-based learning</span>
                    </label>
                </div>
            </div>

            <!-- Question 9: Programming Experience -->
            <div class="question" data-question="9">
                <label class="question-label">9. What's your programming experience level?</label>
                <div class="options">
                    <label class="option">
                        <input type="radio" name="programming" value="beginner" required>
                        <span>Beginner - Little to no coding</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="programming" value="intermediate" required>
                        <span>Intermediate - Some coding experience</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="programming" value="advanced" required>
                        <span>Advanced - Strong programming skills</span>
                    </label>
                    <label class="option">
                        <input type="radio" name="programming" value="expert" required>
                        <span>Expert - Professional developer</span>
                    </label>
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="nav-buttons">
                <button type="button" class="btn btn-secondary" id="prevBtn" onclick="changeQuestion(-1)">Previous</button>
                <button type="button" class="btn btn-primary" id="nextBtn" onclick="changeQuestion(1)">Next</button>
                <button type="submit" class="btn btn-primary" id="submitBtn" style="display: none;">Get Recommendations</button>
            </div>
        </form>

        <!-- Results Section -->
        <div id="results" class="results">
            <div id="loadingState" class="loading">
                <div class="spinner"></div>
                <p>Analyzing your profile and matching with 251 learning paths...</p>
            </div>
            <div id="resultsContent" style="display: none;"></div>
        </div>
    </div>

    <script>
        let currentQuestion = 1;
        const totalQuestions = 9;
        // Use deployed multi-agent system with TF-IDF integration (working!)
        const ORCHESTRATOR_URL = 'https://orchestrator-239116109469.us-west1.run.app/api/v1/quiz/score';

        // For demo purposes - In production, this would be obtained from your auth system
        const DEMO_JWT_SECRET = 'tgJoQnBPwHxccxWwYdx15g==';

        // Update progress bar
        function updateProgress() {
            const progress = (currentQuestion / totalQuestions) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        // Change question
        function changeQuestion(direction) {
            const questions = document.querySelectorAll('.question');
            const current = questions[currentQuestion - 1];

            // Validate current question before proceeding
            if (direction > 0) {
                const inputs = current.querySelectorAll('input[required]');
                let isValid = false;

                if (inputs.length > 0) {
                    // Validate required inputs (radio buttons)
                    inputs.forEach(input => {
                        if (input.type === 'checkbox') {
                            const checkboxes = current.querySelectorAll('input[name="' + input.name + '"]');
                            const anyChecked = Array.from(checkboxes).some(cb => cb.checked);
                            if (anyChecked) isValid = true;
                        } else if (input.checked) {
                            isValid = true;
                        }
                    });
                } else {
                    // Special handling for checkbox questions (not marked as required)
                    const checkboxes = current.querySelectorAll('input[type="checkbox"]');
                    if (checkboxes.length > 0) {
                        isValid = Array.from(checkboxes).some(cb => cb.checked);
                    } else {
                        // No validation needed for this question
                        isValid = true;
                    }
                }

                if (!isValid && currentQuestion < totalQuestions) {
                    alert('Please answer this question before continuing.');
                    return;
                }
            }

            // Hide current question
            current.classList.remove('active');

            // Update question number
            currentQuestion += direction;
            if (currentQuestion < 1) currentQuestion = 1;
            if (currentQuestion > totalQuestions) currentQuestion = totalQuestions;

            // Show new question
            questions[currentQuestion - 1].classList.add('active');

            // Update buttons
            document.getElementById('prevBtn').style.display = currentQuestion === 1 ? 'none' : 'block';
            document.getElementById('nextBtn').style.display = currentQuestion === totalQuestions ? 'none' : 'block';
            document.getElementById('submitBtn').style.display = currentQuestion === totalQuestions ? 'block' : 'none';

            // Update progress
            updateProgress();
        }

        // Handle option selection (visual feedback)
        document.querySelectorAll('.option').forEach(option => {
            option.addEventListener('click', function() {
                const input = this.querySelector('input');
                if (input.type === 'radio') {
                    // Clear other selections in the same group
                    const name = input.name;
                    document.querySelectorAll(`input[name="${name}"]`).forEach(radio => {
                        radio.closest('.option').classList.remove('selected');
                    });
                    input.checked = true;
                    this.classList.add('selected');
                } else if (input.type === 'checkbox') {
                    input.checked = !input.checked;
                    this.classList.toggle('selected');
                }
            });
        });

        // Get JWT from demo server
        async function getDemoJWT() {
            try {
                const response = await fetch('/api/demo-token');
                if (!response.ok) throw new Error('Failed to get JWT');
                const data = await response.json();
                return data.token;
            } catch (error) {
                console.error('JWT generation failed:', error);
                throw new Error('Failed to generate authentication token');
            }
        }

        // Handle form submission
        document.getElementById('quizForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            // Collect answers
            const formData = new FormData(this);
            const answers = {
                experienceLevel: formData.get('experienceLevel'),
                interests: formData.getAll('interests'),
                availability: formData.get('availability'),
                budget: formData.get('budget'),
                timeline: formData.get('timeline'),
                certification: formData.get('certification'),
                learningGoal: formData.get('learningGoal'),
                learningStyle: formData.get('learningStyle'),
                programming: formData.get('programming')
            };

            // Validate interests
            if (answers.interests.length === 0) {
                alert('Please select at least one interest in Question 2.');
                currentQuestion = 2;
                changeQuestion(0);
                return;
            }

            // Show loading state
            document.getElementById('quizForm').style.display = 'none';
            document.getElementById('results').classList.add('active');
            document.getElementById('loadingState').style.display = 'block';

            try {
                // Get JWT from demo server
                const token = await getDemoJWT();

                // Submit to AICIN API
                const startTime = Date.now();
                const response = await fetch(ORCHESTRATOR_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ answers })
                });

                const responseTime = Date.now() - startTime;

                if (!response.ok) {
                    throw new Error(`API Error: ${response.status} ${response.statusText}`);
                }

                const data = await response.json();

                // Display results
                displayResults(data, responseTime);

            } catch (error) {
                console.error('Error:', error);
                document.getElementById('loadingState').innerHTML = `
                    <div class="error">
                        <h3>Oops! Something went wrong</h3>
                        <p>${error.message}</p>
                        <button class="btn btn-primary" onclick="location.reload()">Try Again</button>
                    </div>
                `;
            }
        });

        // Display results
        function displayResults(data, responseTime) {
            document.getElementById('loadingState').style.display = 'none';
            const resultsContent = document.getElementById('resultsContent');
            resultsContent.style.display = 'block';

            const recommendations = data.recommendations || [];
            const processingTime = data.processingTimeMs || responseTime;

            let html = '<h2 style="margin-bottom: 20px;">ðŸŽ¯ Your Personalized Learning Paths</h2>';

            recommendations.forEach((rec, index) => {
                const rank = index + 1;
                const rankClass = rank === 1 ? 'gold' : rank === 2 ? 'silver' : rank === 3 ? 'bronze' : '';
                const medal = rank === 1 ? 'ðŸ¥‡' : rank === 2 ? 'ðŸ¥ˆ' : rank === 3 ? 'ðŸ¥‰' : '';

                html += `
                    <div class="recommendation-card rank-${rank}">
                        <div class="rec-header">
                            <span class="rec-rank ${rankClass}">${medal} #${rank}</span>
                            <span class="rec-title">${rec.pathTitle}</span>
                            <span class="rec-score">${(rec.matchScore * 100).toFixed(0)}% Match</span>
                        </div>
                        <div class="rec-details">
                            <strong>Confidence:</strong> ${rec.confidence}
                        </div>
                        ${rec.matchReasons && rec.matchReasons.length > 0 ? `
                            <div class="rec-reason">
                                <strong>Why this matches:</strong>
                                <ul style="margin: 8px 0 0 0; padding-left: 20px;">
                                    ${rec.matchReasons.map(r => {
                                        const reasonText = typeof r === 'string' ? r : (r.reason || r.text || '');
                                        const category = r.category ? ` (${r.category})` : '';
                                        return `<li>${reasonText}${category}</li>`;
                                    }).join('')}
                                </ul>
                            </div>
                        ` : ''}
                        ${rec.categoryBreakdown ? `
                            <div class="rec-reason" style="margin-top: 8px;">
                                <strong>Match breakdown:</strong>
                                <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 4px; margin-top: 4px; font-size: 12px;">
                                    ${Object.entries(rec.categoryBreakdown).map(([key, value]) =>
                                        `<div>â€¢ ${key}: ${Math.round(value * 100)}%</div>`
                                    ).join('')}
                                </div>
                            </div>
                        ` : ''}
                    </div>
                `;
            });

            html += `
                <div class="stats">
                    <div class="stat">
                        <div class="stat-value">${recommendations.length}</div>
                        <div class="stat-label">Paths Found</div>
                    </div>
                    <div class="stat">
                        <div class="stat-value">${(processingTime / 1000).toFixed(2)}s</div>
                        <div class="stat-label">Response Time</div>
                    </div>
                    <div class="stat">
                        <div class="stat-value">${data.fromCache ? 'Yes' : 'No'}</div>
                        <div class="stat-label">From Cache</div>
                    </div>
                    <div class="stat">
                        <div class="stat-value">9</div>
                        <div class="stat-label">Questions</div>
                    </div>
                </div>
                <div style="text-align: center; margin-top: 30px;">
                    <button class="btn btn-primary" onclick="location.reload()">Take Quiz Again</button>
                </div>
            `;

            resultsContent.innerHTML = html;
        }

        // Initialize
        updateProgress();
    </script>
</body>
</html>
